<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <TextView
            android:id="@+id/tv0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingTop="12dp"
            android:text="@string/capital_city"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/capitalCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/tv0"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/capitalCity"
            android:layout_below="@+id/capitalCity"
            android:clickable="true"
            android:onClick="showDetails"
            android:paddingTop="12dp"
            android:tag="SP.POP.TOTL"
            android:text="@string/population"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/population"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/capitalCity"
            android:layout_below="@+id/tv1"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/capitalCity"
            android:layout_below="@+id/population"
            android:paddingTop="12dp"
            android:text="@string/gdp"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/GDP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/capitalCity"
            android:layout_below="@+id/tv3"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/capitalCity"
            android:layout_below="@+id/GDP"
            android:paddingTop="12dp"
            android:text="@string/area_of_country"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/countryArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/capitalCity"
            android:layout_below="@+id/tv4"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/capitalCity"
            android:layout_below="@+id/countryArea"
            android:paddingTop="12dp"
            android:text="@string/growth"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/growth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/capitalCity"
            android:layout_below="@+id/tv5"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/growth"
            android:layout_below="@+id/growth"
            android:layout_marginTop="21dp"
            android:paddingTop="12dp"
            android:text="@string/change_date"
            android:textAlignment="center"
            android:textSize="12sp" />

        <SeekBar
            android:id="@+id/seekBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/year"
            android:layout_below="@+id/year"
            android:layout_marginTop="18dp" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@id/tv1"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/more_info"
            android:onClick="showDetails"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_info_details"
            android:tag="SP.POP.TOTL" />

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@id/tv3"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv3"
            android:adjustViewBounds="true"
            android:contentDescription="@string/more_info"
            android:onClick="showDetails"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_info_details"
            android:tag="NY.GDP.MKTP.CD" />

        <ImageView
            android:id="@+id/iv3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@id/tv4"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv4"
            android:adjustViewBounds="true"
            android:contentDescription="@string/more_info"
            android:onClick="showDetails"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_info_details"
            android:tag="AG.LND.TOTL.K2" />

        <ImageView
            android:id="@+id/iv4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignBottom="@id/tv5"
            android:layout_marginBottom="-4dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv5"
            android:adjustViewBounds="true"
            android:contentDescription="@string/more_info"
            android:onClick="showDetails"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_info_details"
            android:tag="NY.GDP.MKTP.KD.ZG" />
    </RelativeLayout>

</ScrollView>
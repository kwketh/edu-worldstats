<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:text="@string/life_expectancy"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:text="@string/male"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="90dp"
        android:text="@string/female"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/maleLifeExpectancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/femaleLifeExpectancy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv3"
        android:layout_below="@+id/tv3"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/maleLifeExpectancy"
        android:layout_marginTop="10dp"
        android:text="@string/parliament_seats"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/proportionOfSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv4"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proportionOfSeats"
        android:layout_marginTop="10dp"
        android:text="@string/fertility_rate"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/fertilityRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv5"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fertilityRate"
        android:layout_marginTop="10dp"
        android:text="@string/cpia_rating"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cpiaRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv6"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv1"
        android:layout_below="@+id/cpiaRating"
        android:layout_marginTop="10dp"
        android:text="@string/change_date"
        android:textAlignment="center"
        android:textSize="12sp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/year"
        android:max="53"
        android:progress="53" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/tv2"
        android:layout_marginBottom="-5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv2"
        android:adjustViewBounds="true"
        android:contentDescription="@string/more_info"
        android:onClick="showDetails"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_menu_info_details"
        android:tag="SP.DYN.LE00.MA.IN" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/tv3"
        android:layout_marginBottom="-5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv3"
        android:adjustViewBounds="true"
        android:contentDescription="@string/more_info"
        android:onClick="showDetails"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_menu_info_details"
        android:tag="SP.DYN.LE00.FE.IN" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/tv4"
        android:layout_marginBottom="-5dp"
        android:layout_marginLeft="-50dp"
        android:layout_toRightOf="@+id/tv4"
        android:adjustViewBounds="true"
        android:contentDescription="@string/more_info"
        android:onClick="showDetails"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_menu_info_details"
        android:tag="SG.GEN.PARL.ZS" />

    <ImageView
        android:id="@+id/iv4"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/tv5"
        android:layout_marginBottom="-5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv5"
        android:adjustViewBounds="true"
        android:contentDescription="@string/more_info"
        android:onClick="showDetails"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_menu_info_details"
        android:tag="SP.DYN.TFRT.IN" />

    <ImageView
        android:id="@+id/iv5"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@id/tv6"
        android:layout_marginBottom="-5dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/tv6"
        android:adjustViewBounds="true"
        android:contentDescription="@string/more_info"
        android:onClick="showDetails"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_menu_info_details"
        android:tag="IQ.CPA.GNDR.XQ" />

</RelativeLayout>